---
import FormattedDate from "./FormattedDate.astro";
const { title, pubDate, description, updateDate } = Astro.props;
---

<div
  class="hover:animate-background rounded-xl bg-gradient-to-r from-primary via-error to-secondary p-1 shadow-xl transition hover:bg-[length:400%_400%] hover:shadow-sm hover:[animation-duration:_4s]"
>
  <div
    class="w-64 h-56 lg:w-96 rounded-[10px] bg-base-100 p-4 sm:p-6 flex flex-col justify-between"
  >
    <div class="flex h-full flex-col justify-between">
      <div>
        <div class="sm:flex sm:justify-between sm:gap-4">
          <div>
            <h3 class="text-lg font-bold text-inherit sm:text-xl">
              {title}
            </h3>
          </div>
        </div>

        <div class="mt-4">
          <p class="max-w-[40ch] text-sm text-inherit">
            {description}
          </p>
        </div>
      </div>
      <dl class="mt-6 flex gap-4 sm:gap-6">
        <div class="flex flex-col-reverse">
          <dt class="text-sm font-medium text-inherit">Started</dt>
          <dd class="text-xs text-secondary">
            <FormattedDate date={pubDate} />
          </dd>
        </div>

        <div class="flex flex-col-reverse">
          <dt class="text-sm font-medium text-inherit">Last Update</dt>
          <dd class="text-xs text-secondary">
            <FormattedDate date={updateDate} />
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
